import os
import time
import serial
import csv
from dotenv import load_dotenv
from pathlib import Path
from datetime import datetime
import psycopg2

# -------------------------
# .env Datei laden
# -------------------------
load_dotenv(dotenv_path=Path.cwd() / ".env")

# -------------------------
# Konfiguration
# -------------------------
SERIAL_PORT = os.getenv("SERIAL_PORT", "/dev/serial0")
BAUD_RATE = int(os.getenv("BAUD_RATE", 9600))
BUFFER_FILE = "buffer.csv"

DB_HOST = os.getenv("DB_HOST")
DB_PORT = os.getenv("DB_PORT", "5432")
DB_NAME = os.getenv("DB_NAME")
DB_USER = os.getenv("DB_USER")
DB_PASSWORD = os.getenv("DB_PASSWORD")

# -------------------------
# Funktionen
# -------------------------
def parse_gpgga(line):
    try:
        parts = line.split(',')
        if len(parts) < 10:
            return None
        lat_raw = parts[2]
        lat_dir = parts[3]
        lon_raw = parts[4]
        lon_dir = parts[5]
        alt = float(parts[9])

        lat = convert_to_decimal(lat_raw, lat_dir)
        lon = convert_to_decimal(lon_raw, lon_dir)

        return (lat, lon, alt)
    except:
        return None

def convert_to_decimal(raw, direction):
    if raw == '' or direction == '':
        return None
    deg = int(float(raw) / 100)
    min = float(raw) - deg * 100
    decimal = deg + min / 60
    if direction in ['S', 'W']:
        decimal = -decimal
    return decimal

def save_to_buffer(timestamp, lat, lon, alt):
    with open(BUFFER_FILE, "a", newline='') as f:
        writer = csv.writer(f)
        writer.writerow([timestamp, lat, lon, alt])
    print("ðŸ’¾ Gespeichert im Puffer (Offline-Modus)")

def flush_buffer_to_db(cursor, db):
    if not os.path.exists(BUFFER_FILE):
        return
    with open(BUFFER_FILE, "r") as f:
        reader = csv.reader(f)
        rows = list(reader)
    if not rows:
        return

    success = True
    for row in rows:
        try:
            cursor.execute(
                """
                INSERT INTO gnss_data (timestamp, latitude, longitude, altitude)
                VALUES (%s, %s, %s, %s)
                """,
                (row[0], float(row[1]), float(row[2]), float(row[3]))
            )
        except Exception as e:
            print(f"âŒ Fehler beim Nachtragen: {e}")
            success = False
            break

    if success:
        db.commit()
        open(BUFFER_FILE, "w").close()
        print(f"âœ… {len(rows)} gepufferte DatensÃ¤tze nachgetragen.")

# -------------------------
# Hauptprogramm
# -------------------------
try:
    # GNSS-Verbindung Ã¶ffnen
    ser = serial.Serial(SERIAL_PORT, BAUD_RATE, timeout=1)
    print("âœ… GNSS-Sensor verbunden!")

    # Datenbank-Verbindung aufbauen
    print(f"â†’  verbinde zu  {DB_NAME}@{DB_HOST}:{DB_PORT}  als {DB_USER}")
    db = psycopg2.connect(
        host=DB_HOST,
        port=DB_PORT,
        dbname=DB_NAME,
        user=DB_USER,
        password=DB_PASSWORD,
        sslmode="require"
    )
    cursor = db.cursor()
    print("âœ… Mit Datenbank verbunden!")

    # Versuch direkt beim Start evtl. alten Puffer zu leeren
    flush_buffer_to_db(cursor, db)

    while True:
        try:
            line = ser.readline().decode('utf-8', errors='ignore').strip()
            print(f"Empfangen: {line}")

            if 'GGA' in line:
                print("âž¡ï¸  GGA-Zeile erkannt!")

                data = parse_gpgga(line)
                if data:
                    lat, lon, alt = data
                    timestamp = datetime.utcnow()

                    print(f"ðŸŒ Parsed erfolgreich: {lat}, {lon}, {alt} m")

                    try:
                        cursor.execute(
                            """
                            INSERT INTO gnss_data (timestamp, latitude, longitude, altitude)
                            VALUES (%s, %s, %s, %s)
                            """,
                            (timestamp, lat, lon, alt)
                        )
                        db.commit()
                        print(f"âœ… Gespeichert in DB: {timestamp}")

                        # Versuch auch Puffer nachzutragen
                        flush_buffer_to_db(cursor, db)

                    except Exception as db_err:
                        print(f"âŒ Fehler beim Insert: {db_err}")
                        save_to_buffer(timestamp, lat, lon, alt)
                else:
                    print("âš ï¸  Parsing fehlgeschlagen â€“ keine Daten!")

        except KeyboardInterrupt:
            print("\nðŸ›‘ GNSS-Logger beendet durch Tastatur")
            break

        except Exception as e:
            print(f"âš ï¸ Unerwarteter Fehler: {e}")
            time.sleep(2)

finally:
    print("\nðŸ“¦ AufrÃ¤umen...")
    try:
        if 'cursor' in locals():
            cursor.close()
        if 'db' in locals():
            db.close()
        if 'ser' in locals():
            ser.close()
    except Exception as e:
        print(f"âš ï¸ Fehler beim AufrÃ¤umen: {e}")
